<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kashark.crazykashark.mapper.ScheduleMapper">
    <sql id="selectSchedule">
        SELECT s.`id`,
               s.`student_id`,
               s.`core_teacher_id`,
               s.`time`,
               s.`type`,
               s.`comment`
        FROM `schedule` s
    </sql>

    <select resultMap="scheduleResultMap" id="getSchedule"
            resultType="com.kashark.crazykashark.entity.Schedule">
        <include refid="selectSchedule"/>
        WHERE s.`deleted` = 0
        LIMIT #{start}, #{length}
    </select>

    <select resultMap="scheduleResultMap" id="getScheduleById"
            resultType="com.kashark.crazykashark.entity.Schedule">
        <include refid="selectSchedule"/>
        WHERE s.`deleted` = 0
        AND s.`id` = #{id}
    </select>

    <select resultMap="scheduleResultMap" id="getScheduleByStudentId"
            resultType="com.kashark.crazykashark.entity.Schedule">
        <include refid="selectSchedule"/>
        WHERE s.`deleted` = 0
        AND s.`student_id` = #{studentId}
    </select>

    <select resultMap="scheduleResultMap" id="getScheduleByCoreTeacherId"
            resultType="com.kashark.crazykashark.entity.Schedule">
        <include refid="selectSchedule"/>
        WHERE s.`deleted` = 0
        AND s.`core_teacher_id` = #{coreTeacherId}
    </select>

    <select resultMap="scheduleResultMap" id="getScheduleByTimeAndType"
            resultType="com.kashark.crazykashark.entity.Schedule">
        <include refid="selectSchedule"/>
        WHERE s.`deleted` = 0
        AND s.`time` BETWEEN #{beginTime} AND #{endTime}
        AND s.`type` = #{type}
        ORDER BY s.`time` ASC
    </select>

    <select resultMap="scheduleResultMap" id="getScheduleWithStatusByTimeAndType"
            resultType="com.kashark.crazykashark.entity.Schedule">
        <include refid="selectSchedule"/>
        WHERE s.`deleted` = 0
        AND s.`time` BETWEEN #{beginTime} AND #{endTime}
        AND s.`type` = #{type}
        ORDER BY s.`time` ASC
        LIMIT #{start}, #{length}
    </select>

    <select resultMap="scheduleResultMap" id="getScheduleByTimeAndCoreTeacherIdAndType"
            resultType="com.kashark.crazykashark.entity.Schedule">
        <include refid="selectSchedule"/>
        WHERE s.`deleted` = 0
        AND s.`time` BETWEEN #{beginTime} AND #{endTime}
        AND s.`core_teacher_id` = #{coreTeacherId}
        AND s.`type` = #{type}
        ORDER BY s.`time` ASC
    </select>

    <select resultMap="scheduleResultMap" id="searchSchedule"
            resultType="com.kashark.crazykashark.entity.Schedule">
        <include refid="selectSchedule"/>
        <where>
            <if test="keywords != null">
                <foreach collection="keywords" item="keyword">
                    AND (
                    s.`student_name` LIKE "%"#{keyword}"%"
                    OR s.`student_id` LIKE "%"#{keyword}"%"
                    )
                </foreach>
            </if>
            AND s.`deleted` = 0
        </where>
        ORDER BY s.`plan_chart_id` ASC
        LIMIT #{start}, #{length}
    </select>

    <resultMap id="scheduleResultMap" type="com.kashark.crazykashark.entity.Schedule">
        <id column="id" property="id"/>
        <result column="planChartId" property="plan_chart_id"/>
        <result column="studentId" property="student_id"/>
        <result column="coreTeacherId" property="core_teacher_id"/>
        <result column="batch" property="batch"/>
        <result column="comment" property="comment"/>
    </resultMap>
</mapper>